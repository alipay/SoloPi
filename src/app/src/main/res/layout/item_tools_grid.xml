<com.alipay.hulu.ui.ColorFilterRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/bg_settings_item">

    <LinearLayout
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginLeft="-19dp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:gravity="right|center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:textColor="@color/white"
                android:id="@+id/index_corner"
                android:textSize="10dp" />
    </LinearLayout>

    <!-- 标题拦 -->
    <ImageView
        android:id="@+id/img"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/icon_xingneng" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="录制回放"
        android:textSize="13dp" />

</com.alipay.hulu.ui.ColorFilterRelativeLayout>