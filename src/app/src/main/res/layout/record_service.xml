<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout android:layout_width="@dimen/record_float_width_dp140"
        android:layout_height="@dimen/control_dp40"
                  android:orientation="horizontal"
                  android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/record_btn"
            android:text="@string/record_float__start_record"
            android:textSize="@dimen/textsize_16"
            android:textColor="@color/primaryText"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider_color"/>

        <LinearLayout
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/control_dp6"
            android:paddingTop="@dimen/control_dp6"
            android:paddingLeft="@dimen/control_dp4"
            android:paddingRight="@dimen/control_dp4"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/control_dp24"
                android:layout_height="@dimen/control_dp24"
                android:src="@drawable/close_icon" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/control_dp30"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/record_kill_current"
            android:layout_width="match_parent"
            android:layout_height="@dimen/control_dp30"
            android:gravity="center"
            android:padding="@dimen/control_dp4"
            android:text="@string/record_float__kill_process"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/textsize_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color"/>

    <ListView
        android:id="@+id/record_session_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/slim_divider"
        android:footerDividersEnabled="true"
        tools:listitem="@layout/item_screen_result"
        />

    <ImageView
        android:id="@+id/record_session_hide"
        android:layout_width="match_parent"
        android:layout_height="@dimen/control_dp16"
        android:padding="@dimen/control_dp2"
        android:scaleType="fitCenter"
        android:rotation="180"
        android:src="@drawable/angel"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color"/>
</LinearLayout>


