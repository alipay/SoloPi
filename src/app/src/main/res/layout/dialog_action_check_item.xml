<com.alipay.hulu.ui.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:duplicateParentState="true"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">
    <ImageView
        android:id="@+id/dialog_action_icon"
        android:layout_width="24dp"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:layout_height="24dp" />

    <CheckBox
        android:id="@+id/dialog_action_check"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>


    <TextView
        android:id="@+id/dialog_action_title"
        android:layout_toRightOf="@id/dialog_action_icon"
        android:layout_toLeftOf="@id/dialog_action_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/primaryText"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        />
</com.alipay.hulu.ui.CheckableRelativeLayout>